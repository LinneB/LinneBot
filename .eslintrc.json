{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "func-name-matching": [
            "error"
        ],
        "func-style": [
            "error",
            "declaration"
        ],
        "multiline-comment-style": [
            "error",
            "separate-lines"
        ],
        "no-var": [
            "error"
        ],
        "prefer-const": [
            "error"
        ],
        "no-duplicate-imports": [
            "error"
        ]
    }
}
